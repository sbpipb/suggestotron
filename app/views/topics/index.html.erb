<div class="container">

<p id="notice"><%= notice %></p>

<h1>Listing Topics</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @topics.each do |topic| %>
        <tr>
          <td><%= link_to topic.title, topic %></td>

          <td><%= pluralize(topic.votes.count, "vote") %></td>
          <td><%= button_to '+1', upvote_topic_path(topic), method: :post, class: "btn btn-success btn-small" %></td>
          <td><%= button_to '-1', downvote_topic_path(topic), method: :post, class: "btn btn-danger" %></td>

          <td><%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-default" %></td>
          <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %></td>

        </tr>
      <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Topic', new_topic_path %>
<%= link_to 'About Page', about_path %>
</div>